---
// src/pages/buscar.astro
import Layout from '../layouts/Layout.astro';
import SearchServiciosIsland from '../components/SearchServiciosIsland.tsx';
import GoogleAdIsland from '../components/GoogleAdIsland.tsx';
---

<Layout title="Buscar Servicios - EnMiPueblo">
  <section class="py-12 bg-gray-100 min-h-[calc(100vh-250px)]">
    <div class="container mx-auto px-4">
      <h1 class="text-4xl font-bold text-center text-emerald-700 mb-8">
        Encuentra tu Servicio Ideal
      </h1>

      <!-- Anuncio justo después del título -->
      <GoogleAdIsland client:load />

      <SearchServiciosIsland client:load usuarioEmail={null} />
    </div>
  </section>
</Layout>
