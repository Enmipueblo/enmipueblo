---
import Layout from "../layouts/Layout.astro";
import SearchServiciosIsland from "../components/SearchServiciosIsland.tsx";
import GoogleAdIsland from "../components/GoogleAdIsland.tsx";
---

<Layout title="Buscar Servicios - EnMiPueblo">
  <section class="py-12 bg-gradient-to-b from-sage-50 via-lilac-50/40 to-white min-h-[calc(100vh-250px)]">
    <div class="container mx-auto px-4">
      <h1 class="text-4xl font-extrabold text-center text-slate-900 mb-2">
        Encuentra tu Servicio Ideal<span class="text-lilac-400">.</span>
      </h1>
      <p class="text-center text-slate-600 mb-8">
        Filtra por texto, categoría y ubicación. Rápido y simple.
      </p>

      <GoogleAdIsland client:idle />
      <SearchServiciosIsland client:idle usuarioEmail={null} />

      <noscript>
        <div class="mt-6 p-4 bg-white/80 rounded-3xl border border-sage-100 text-center text-slate-600">
          Para usar la búsqueda necesitas habilitar JavaScript.
        </div>
      </noscript>
    </div>
  </section>
</Layout>
