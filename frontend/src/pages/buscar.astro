---
import Layout from "../layouts/Layout.astro";
import SearchServiciosIsland from "../components/SearchServiciosIsland.tsx";
import GoogleAdIsland from "../components/GoogleAdIsland.tsx";
---

<Layout title="Buscar Servicios - EnMiPueblo">
  <section class="relative py-12 min-h-[calc(100vh-250px)] overflow-hidden">
    <!-- Fondo pastel (verde + tierra) -->
    <div class="absolute inset-0 bg-gradient-to-b from-emerald-50 via-stone-50 to-white"></div>
    <div class="absolute inset-0 opacity-70 bg-[radial-gradient(900px_circle_at_20%_0%,rgba(167,243,208,0.55),rgba(250,250,249,0))]"></div>

    <div class="relative container mx-auto px-4">
      <h1 class="text-4xl font-extrabold text-center text-slate-900 mb-2">
        Encuentra tu Servicio Ideal<span class="text-amber-400">.</span>
      </h1>
      <p class="text-center text-slate-600 mb-8">
        Filtra por texto, categoría y ubicación. Rápido y simple.
      </p>

      <GoogleAdIsland client:idle />

      <!-- Card para que el cambio se note SI o SI -->
      <div class="max-w-6xl mx-auto bg-white/70 backdrop-blur rounded-3xl border border-stone-200 shadow-sm p-4 md:p-6">
        <SearchServiciosIsland client:idle />
      </div>

      <noscript>
        <div class="mt-6 p-4 bg-white/80 rounded-3xl border border-stone-200 text-center text-slate-600">
          Para usar la búsqueda necesitas habilitar JavaScript.
        </div>
      </noscript>
    </div>
  </section>
</Layout>
