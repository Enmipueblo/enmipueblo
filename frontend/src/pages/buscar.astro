---
// src/pages/buscar.astro
import Layout from '../layouts/Layout.astro';
import SearchServiciosIsland from '../components/SearchServiciosIsland.tsx';
import GoogleAdIsland from '../components/GoogleAdIsland.tsx';
---

<Layout title="Buscar Servicios - EnMiPueblo">
  <section class="py-12 bg-gray-100 min-h-[calc(100vh-250px)]">
    <div class="container mx-auto px-4">
      <h1 class="text-4xl font-bold text-center text-emerald-700 mb-8">
        Encuentra tu Servicio Ideal
      </h1>

      <!-- Ads: cargar cuando el navegador esté libre -->
      <GoogleAdIsland client:idle />

      <!-- Search: cargar en idle para no bloquear el primer render -->
      <SearchServiciosIsland client:idle usuarioEmail={null} />

      <noscript>
        <div class="mt-6 p-4 bg-white rounded-2xl border border-emerald-100 text-center text-gray-600">
          Para usar la búsqueda necesitas habilitar JavaScript.
        </div>
      </noscript>
    </div>
  </section>
</Layout>
