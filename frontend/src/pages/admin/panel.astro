---
import Layout from "../../layouts/Layout.astro";
import AdminPanelServiciosIsland from "../../components/AdminPanelServiciosIsland.tsx";
import GoogleAdIsland from "../../components/GoogleAdIsland.tsx";

const SLOT_ADMIN = import.meta.env.PUBLIC_ADSENSE_SLOT_ADMIN;
---

<Layout title="Admin - EnMiPueblo" noindex={true}>
  <section class="mx-auto max-w-6xl px-4 py-10">
    <div
      class="rounded-3xl border bg-white/70 backdrop-blur shadow-[0_18px_50px_-40px_rgba(0,0,0,0.25)]"
      style="border-color: var(--sb-border);"
    >
      <div class="p-6 md:p-8">
        <div class="flex flex-col md:flex-row md:items-start md:justify-between gap-4">
          <div>
            <h1 class="text-3xl md:text-4xl font-extrabold" style="color: var(--sb-ink);">Panel de administraci√≥n</h1>
            <p class="mt-1 text-sm md:text-base" style="color: var(--sb-ink2);">Modera servicios, destacados y estado.</p>
          </div>
          <div class="w-full md:w-auto">
            <GoogleAdIsland client:idle slot={SLOT_ADMIN} minHeight={120} />
          </div>
        </div>

        <div class="mt-6 rounded-3xl border bg-white/60" style="border-color: var(--sb-border);">
          <div class="p-4 md:p-6">
            <AdminPanelServiciosIsland client:only="react" />
          </div>
        </div>
      </div>
    </div>
  </section>
</Layout>
