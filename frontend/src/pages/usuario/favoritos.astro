---
import Layout from "../../layouts/Layout.astro";
import GoogleAdIsland from "../../components/GoogleAdIsland.tsx";

const SLOT_USER = import.meta.env.PUBLIC_ADSENSE_SLOT_USER;
---

<Layout title="Favoritos - EnMiPueblo" noindex={true}>
  <section class="mx-auto max-w-6xl px-4 py-10">
    <div
      class="rounded-3xl border bg-white/70 backdrop-blur shadow-[0_18px_50px_-40px_rgba(0,0,0,0.25)]"
      style="border-color: var(--sb-border);"
    >
      <div class="p-6 md:p-8">
        <div class="flex flex-col md:flex-row md:items-end md:justify-between gap-4">
          <div>
            <h1 class="text-3xl md:text-4xl font-extrabold" style="color: var(--sb-ink);">Favoritos</h1>
            <p class="mt-1 text-sm md:text-base" style="color: var(--sb-ink2);">
              Tus favoritos ahora están en el Panel de Usuario.
            </p>
          </div>
          <a
            href="/usuario/panel"
            class="inline-flex items-center justify-center rounded-2xl px-4 py-2 text-sm font-extrabold text-white shadow-sm"
            style="background: var(--sb-accent);"
          >
            Ir al Panel
          </a>
        </div>

        <div class="mt-6">
          <GoogleAdIsland client:idle slot={SLOT_USER} minHeight={140} title="Publicidad" />
        </div>

        <div class="mt-6 rounded-3xl border bg-white/60" style="border-color: var(--sb-border);">
          <div class="p-6 text-center">
            <h2 class="text-xl font-extrabold" style="color: var(--sb-ink);">¡Sección de favoritos renovada!</h2>
            <p class="mt-2 text-sm" style="color: var(--sb-ink2);">
              Consulta y organiza tus favoritos desde el nuevo <span class="font-semibold">Panel de Usuario</span>.
            </p>
            <a
              href="/usuario/panel"
              class="mt-5 inline-flex items-center justify-center rounded-2xl px-5 py-3 text-sm font-extrabold text-white shadow-sm"
              style="background: var(--sb-accent);"
            >
              Abrir Panel de Usuario
            </a>
          </div>
        </div>
      </div>
    </div>
  </section>
</Layout>
