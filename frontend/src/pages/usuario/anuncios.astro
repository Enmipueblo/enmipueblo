---
// src/pages/usuario/anuncios.astro
import Layout from '../../layouts/Layout.astro';
---

<Layout title="Redirección de usuario" noindex={true}>
  <div class="min-h-screen flex items-center justify-center bg-yellow-50">
    <div class="bg-white shadow-xl rounded-xl p-10 text-center max-w-lg mx-auto border border-yellow-200">
      <h2 class="text-2xl font-bold text-yellow-700 mb-4">¡Sección en renovación!</h2>
      <p class="mb-6 text-gray-700">Gestiona tus anuncios directamente desde el nuevo <span class="font-semibold">Panel de Usuario</span>.</p>
      <a href="/usuario/panel" class="inline-block bg-emerald-600 hover:bg-emerald-700 text-white font-bold py-3 px-6 rounded-lg shadow transition">
        Ir al Panel de Usuario
      </a>
    </div>
  </div>
</Layout>
