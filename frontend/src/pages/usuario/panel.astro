---
import Layout from "../../layouts/Layout.astro";
import PanelUsuarioIsland from "../../components/PanelUsuarioIsland.tsx";
import GoogleAdIsland from "../../components/GoogleAdIsland.tsx";

const SLOT_PANEL = import.meta.env.PUBLIC_ADSENSE_SLOT_PANEL;
---

<Layout title="Mi panel - EnMiPueblo" noindex={true}>
  <section class="mx-auto max-w-6xl px-4 py-10">
    <div
      class="rounded-3xl border bg-white/70 backdrop-blur shadow-[0_18px_50px_-40px_rgba(0,0,0,0.25)]"
      style="border-color: var(--sb-border);"
    >
      <div class="p-6 md:p-8">
        <div class="flex flex-col md:flex-row md:items-end md:justify-between gap-4">
          <div>
            <h1 class="text-3xl md:text-4xl font-extrabold" style="color: var(--sb-ink);">Mi panel</h1>
            <p class="mt-1 text-sm md:text-base" style="color: var(--sb-ink2);">
              Gestiona tus servicios, favoritos y destaca tus anuncios.
            </p>
          </div>
          <a
            href="/ofrecer"
            class="inline-flex items-center justify-center rounded-2xl px-4 py-2 text-sm font-extrabold border bg-white/80 hover:bg-white transition"
            style="border-color: var(--sb-border); color: var(--sb-ink);"
          >
            Publicar servicio
          </a>
        </div>

        <div class="mt-6">
          <GoogleAdIsland client:idle slot={SLOT_PANEL} minHeight={160} title="Publicidad" />
        </div>

        <div class="mt-6 rounded-3xl border bg-white/60" style="border-color: var(--sb-border);">
          <div class="p-4 md:p-6">
            <PanelUsuarioIsland client:load />
          </div>
        </div>
      </div>
    </div>
  </section>
</Layout>
