---
// src/components/footer.astro
---

<footer
  class="mt-auto"
  style="
    background:
      linear-gradient(to bottom,
        rgba(0,0,0,0) 0%,
        rgba(11,107,98,0.12) 22%,
        rgba(11,107,98,0.38) 52%,
        rgba(11,107,98,0.78) 78%,
        #063834 100%
      );
  "
>
  <div class="container mx-auto px-4 pt-16 pb-10 flex flex-col md:flex-row md:items-center md:justify-between gap-8">
    <div>
      <a href="/" class="text-2xl font-extrabold hover:opacity-95 transition" style="color:#EFFFF8;">
        EnMiPueblo<span style="color: var(--sb-purple);">.</span>
      </a>
      <p class="mt-2 text-sm" style="color: rgba(239,255,248,0.85);">
        © {new Date().getFullYear()} EnMiPueblo. Todos los derechos reservados.
      </p>
    </div>

    <div class="flex flex-col md:flex-row gap-4 md:gap-8 items-start md:items-center">
      <a href="/politica-privacidad" class="transition font-semibold hover:opacity-95" style="color: rgba(239,255,248,0.92);">Política de Privacidad</a>
      <a href="/politica-cookies" class="transition font-semibold hover:opacity-95" style="color: rgba(239,255,248,0.92);">Política de Cookies</a>
      <a href="/aviso-legal" class="transition font-semibold hover:opacity-95" style="color: rgba(239,255,248,0.92);">Aviso legal</a>
      <a href="/terminos" class="transition font-semibold hover:opacity-95" style="color: rgba(239,255,248,0.92);">Términos y Condiciones</a>

      <button
        type="button"
        class="transition text-left font-semibold hover:opacity-95"
        style="color: rgba(239,255,248,0.92);"
        onclick="window?.openCookieSettings?.()"
      >
        Configurar cookies
      </button>

      <a href="/contacto" class="transition font-semibold hover:opacity-95" style="color: rgba(239,255,248,0.92);">Contacto</a>

      <div class="flex space-x-3 mt-2 md:mt-0" style="color: rgba(239,255,248,0.92);">
        <a href="https://instagram.com/" target="_blank" rel="noopener" aria-label="Instagram" class="transition hover:opacity-95">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
            <rect width="18" height="18" x="3" y="3" rx="5" />
            <circle cx="12" cy="12" r="4" />
            <circle cx="17" cy="7" r="1.5" />
          </svg>
        </a>
        <a href="https://facebook.com/" target="_blank" rel="noopener" aria-label="Facebook" class="transition hover:opacity-95">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
            <path d="M18 2h-3a5 5 0 00-5 5v3H6v4h4v8h4v-8h3l1-4h-4V7a1 1 0 011-1h3z" />
          </svg>
        </a>
      </div>
    </div>
  </div>
</footer>
