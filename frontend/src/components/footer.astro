---
// src/components/footer.astro
---

<footer class="mt-10">
  <div class="mx-auto max-w-6xl px-4 pb-10">
    <div
      class="rounded-3xl border bg-white/70 backdrop-blur shadow-[0_18px_50px_-40px_rgba(0,0,0,0.25)]"
      style="border-color: var(--sb-border);"
    >
      <div class="p-6 md:p-8 flex flex-col md:flex-row md:items-center md:justify-between gap-6">
        <div class="flex items-center gap-3">
          <a href="/" aria-label="EnMiPueblo" class="shrink-0">
            <img src="/brand/logo-web.png" alt="EnMiPueblo" class="h-6 w-auto" loading="lazy" />
          </a>
          <div class="text-sm" style="color: var(--sb-muted);">
            © {new Date().getFullYear()} EnMiPueblo. Todos los derechos reservados.
          </div>
        </div>

        <div class="flex flex-wrap gap-x-6 gap-y-3 text-sm font-semibold" style="color: var(--sb-ink);">
          <a href="/buscar" class="hover:opacity-80">Buscar</a>
          <a href="/ofrecer" class="hover:opacity-80">Ofrecer</a>
          <a href="/contacto" class="hover:opacity-80">Contacto</a>
          <a href="/aviso-legal" class="hover:opacity-80">Aviso legal</a>
          <a href="/politica-privacidad" class="hover:opacity-80">Privacidad</a>
          <a href="/politica-cookies" class="hover:opacity-80">Cookies</a>
          <a href="/terminos" class="hover:opacity-80">Términos</a>
          <button
            type="button"
            class="hover:opacity-80 text-left"
            onclick="window?.openCookieSettings?.()"
          >
            Configurar cookies
          </button>
        </div>
      </div>

      <div class="px-6 md:px-8 pb-6">
        <div class="h-px" style="background: rgba(0,0,0,0.06);"></div>
        <div class="mt-4 flex items-center justify-between gap-4">
          <div class="text-xs" style="color: var(--sb-muted);">
            Hecho para pueblos de España.
          </div>

          <div class="flex items-center gap-3" style="color: var(--sb-muted);">
            <a href="https://instagram.com/" target="_blank" rel="noopener" aria-label="Instagram" class="hover:opacity-80">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                <rect width="18" height="18" x="3" y="3" rx="5" />
                <circle cx="12" cy="12" r="4" />
                <circle cx="17" cy="7" r="1.5" />
              </svg>
            </a>
            <a href="https://facebook.com/" target="_blank" rel="noopener" aria-label="Facebook" class="hover:opacity-80">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                <path d="M18 2h-3a5 5 0 00-5 5v3H6v4h4v8h4v-8h3l1-4h-4V7a1 1 0 011-1h3z" />
              </svg>
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
</footer>
