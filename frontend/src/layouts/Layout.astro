---
// src/layouts/Layout.astro
import Header from '../components/Header.astro';
import Footer from '../components/footer.astro';
import { ViewTransitions } from 'astro:transitions';

import "../styles/global.css";

interface Props {
  title: string;
  description?: string;
  canonical?: string;
  ogImage?: string;
  ogType?: string; // "website" | "article" etc.
  noindex?: boolean;
}

const {
  title,
  description,
  canonical,
  ogImage,
  ogType = "website",
  noindex = false,
} = Astro.props;

const ADSENSE_CLIENT = import.meta.env.PUBLIC_ADSENSE_CLIENT || "";

// ⚠️ Importante: para canonical correcto en build, poné `site:` en astro.config.mjs (te lo dejo abajo)
const SITE = Astro.site ? String(Astro.site).replace(/\/$/, "") : "";
const canonicalUrl = canonical
  ? canonical
  : (SITE ? `${SITE}${Astro.url.pathname}` : Astro.url.toString());

const metaDescription =
  description || "Encuentra y ofrece servicios locales en EnMiPueblo.";

const defaultOgImage = SITE ? `${SITE}/og-default.png` : "/og-default.png";
const ogImageUrl = ogImage || defaultOgImage;
---

<!doctype html>
<html lang="es" view-transition class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={metaDescription} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="referrer" content="strict-origin-when-cross-origin" />

    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />

    <title>{title}</title>
    <ViewTransitions />

    <!-- ✅ Canonical -->
    <link rel="canonical" href={canonicalUrl} />

    <!-- ✅ Robots meta (por defecto index) -->
    {noindex ? (
      <meta name="robots" content="noindex, nofollow" />
    ) : (
      <meta name="robots" content="index, follow" />
    )}

    <!-- ✅ Open Graph -->
    <meta property="og:locale" content="es_ES" />
    <meta property="og:site_name" content="EnMiPueblo" />
    <meta property="og:type" content={ogType} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={metaDescription} />
    <meta property="og:url" content={canonicalUrl} />
    <meta property="og:image" content={ogImageUrl} />

    <!-- ✅ Twitter Cards -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={metaDescription} />
    <meta name="twitter:image" content={ogImageUrl} />

    <!-- Botón "Configurar cookies" (Google CMP / Funding Choices) -->
    <script is:inline>
      window.openCookieSettings = () => {
        const open = () => {
          if (window.googlefc && typeof window.googlefc.showRevocationMessage === 'function') {
            window.googlefc.showRevocationMessage();
          }
        };

        try { open(); return; } catch {}

        window.googlefc = window.googlefc || {};
        window.googlefc.callbackQueue = window.googlefc.callbackQueue || [];
        window.googlefc.callbackQueue.push(() => {
          try { open(); } catch {}
        });
      };
    </script>

    <!-- ✅ AdSense loader: inyecta el script 1 sola vez -->
    {ADSENSE_CLIENT ? (
      <script is:inline>
        {`(function () {
          try {
            var client = ${JSON.stringify(ADSENSE_CLIENT)};
            if (!client) return;

            if (window.__enmiAdsenseLoaded) return;
            window.__enmiAdsenseLoaded = true;

            var already = document.querySelector('script[src*="pagead/js/adsbygoogle.js"]');
            if (already) return;

            var s = document.createElement('script');
            s.async = true;
            s.src = 'https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js?client=' + encodeURIComponent(client);
            s.crossOrigin = 'anonymous';
            document.head.appendChild(s);
          } catch (e) {}
        })();`}
      </script>
    ) : null}
  </head>

  <body class="min-h-screen flex flex-col bg-gradient-to-br from-emerald-50 via-white to-emerald-100 text-gray-900">
    <Header />
    <main class="flex-grow">
      <slot />
    </main>
    <Footer />
  </body>
</html>
