---
// src/layouts/Layout.astro
import Header from "../components/Header.astro";
import Footer from "../components/footer.astro";
import CookieConsentIsland from "../components/CookieConsentIsland.tsx";
import { ViewTransitions } from "astro:transitions";

import "../styles/global.css";

interface Props {
  title: string;
  description?: string;
  canonical?: string;
  ogImage?: string;
  ogType?: string;
  noindex?: boolean;
}

const {
  title,
  description,
  canonical,
  ogImage,
  ogType = "website",
  noindex = false,
} = Astro.props;

const SITE = Astro.site ? String(Astro.site).replace(/\/$/, "") : "";
const canonicalUrl = canonical
  ? canonical
  : SITE
  ? `${SITE}${Astro.url.pathname}`
  : Astro.url.toString();

const metaDescription =
  description || "Encuentra y ofrece servicios locales en EnMiPueblo.";

const defaultOgImage = SITE ? `${SITE}/og-default.png` : "/og-default.png";
const ogImageUrl = ogImage || defaultOgImage;

// Ads globals
const ADSENSE_CLIENT = import.meta.env.PUBLIC_ADSENSE_CLIENT || "";
const adsenseGlobalScript = `var ADSENSE_CLIENT=${JSON.stringify(
  ADSENSE_CLIENT || ""
)};window.ADSENSE_CLIENT=ADSENSE_CLIENT;`;

// Preconnect
const BACKEND_URL = import.meta.env.PUBLIC_BACKEND_URL || "";
const backendOrigin = (() => {
  try {
    return BACKEND_URL ? new URL(BACKEND_URL).origin : "";
  } catch {
    return "";
  }
})();

const FIREBASE_AUTH_DOMAIN = import.meta.env.PUBLIC_FIREBASE_AUTH_DOMAIN || "";
const firebaseAuthOrigin = FIREBASE_AUTH_DOMAIN
  ? `https://${FIREBASE_AUTH_DOMAIN}`
  : "";

// ðŸŽ¨ Nuevo fondo: SOLO verdes (sin amarillo)
const BG_STYLE = `
  background:
    radial-gradient(900px circle at 38% 28%, rgba(255, 255, 255, 0.52) 0%, rgba(0,0,0,0) 60%),
    radial-gradient(900px circle at 88% 18%, rgba(220, 255, 244, 0.55) 0%, rgba(0,0,0,0) 62%),
    radial-gradient(1100px circle at 18% 98%, rgba(10, 90, 70, 0.14) 0%, rgba(0,0,0,0) 65%),
    linear-gradient(120deg, #0B6B62 0%, #55D6C3 42%, #BFF7E8 100%);
`;

// variables del tema (ajustadas a verdes)
const THEME_VARS = `
:root{
  --sb-bg1:#0B6B62;
  --sb-bg2:#55D6C3;
  --sb-bg3:#BFF7E8;

  --sb-ink:#1F4E3D;      /* verde oscuro titulares */
  --sb-ink2:#3F6B57;     /* verde oliva texto */

  --sb-accent:#F2A23A;   /* naranja (muy sutil, si quieres lo quitamos despuÃ©s) */
  --sb-purple:#7B5AC6;   /* violeta sutil */

  --sb-card: rgba(255,255,255,0.78);
  --sb-card2: rgba(255,255,255,0.90);
  --sb-border: rgba(31,78,61,0.18);
}
`;
---

<!doctype html>
<html lang="es" view-transition class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={metaDescription} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="referrer" content="strict-origin-when-cross-origin" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />

    <style is:inline set:html={THEME_VARS}></style>

    {backendOrigin ? (
      <>
        <link rel="preconnect" href={backendOrigin} crossorigin="anonymous" />
        <link rel="dns-prefetch" href={backendOrigin} />
      </>
    ) : null}

    {firebaseAuthOrigin ? (
      <>
        <link rel="preconnect" href={firebaseAuthOrigin} crossorigin="anonymous" />
        <link rel="dns-prefetch" href={firebaseAuthOrigin} />
      </>
    ) : null}

    <link rel="preconnect" href="https://firebasestorage.googleapis.com" crossorigin="anonymous" />
    <link rel="dns-prefetch" href="https://firebasestorage.googleapis.com" />

    <link rel="preconnect" href="https://www.googleapis.com" crossorigin="anonymous" />
    <link rel="dns-prefetch" href="https://www.googleapis.com" />

    <title>{title}</title>
    <ViewTransitions />

    <link rel="canonical" href={canonicalUrl} />

    {noindex ? (
      <meta name="robots" content="noindex, nofollow" />
    ) : (
      <meta name="robots" content="index, follow" />
    )}

    <meta property="og:locale" content="es_ES" />
    <meta property="og:site_name" content="EnMiPueblo" />
    <meta property="og:type" content={ogType} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={metaDescription} />
    <meta property="og:url" content={canonicalUrl} />
    <meta property="og:image" content={ogImageUrl} />

    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={metaDescription} />
    <meta name="twitter:image" content={ogImageUrl} />

    <script is:inline set:html={adsenseGlobalScript}></script>

    <script is:inline>
      window.openCookieSettings = () => {
        const open = () => {
          if (window.googlefc && typeof window.googlefc.showRevocationMessage === "function") {
            window.googlefc.showRevocationMessage();
          }
        };
        try { open(); return; } catch {}
        window.googlefc = window.googlefc || {};
        window.googlefc.callbackQueue = window.googlefc.callbackQueue || [];
        window.googlefc.callbackQueue.push(() => {
          try { open(); } catch {}
        });
      };
    </script>
  </head>

  <body class="min-h-screen flex flex-col" style={BG_STYLE}>
    <Header />
    <main class="flex-grow">
      <slot />
    </main>

    <CookieConsentIsland client:idle />

    <Footer />
  </body>
</html>
