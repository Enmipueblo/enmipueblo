---
// src/layouts/Layout.astro
import Header from "../components/Header.astro";
import Footer from "../components/footer.astro";
import CookieConsentIsland from "../components/CookieConsentIsland.tsx";
import { ViewTransitions } from "astro:transitions";

import "../styles/global.css";

interface Props {
  title: string;
  description?: string;
  canonical?: string;
  ogImage?: string;
  ogType?: string;
  noindex?: boolean;
}

const {
  title,
  description,
  canonical,
  ogImage,
  ogType = "website",
  noindex = false,
} = Astro.props;

const SITE = Astro.site ? String(Astro.site).replace(/\/$/, "") : "";
const canonicalUrl = canonical
  ? canonical
  : SITE
  ? `${SITE}${Astro.url.pathname}`
  : Astro.url.toString();

const metaDescription =
  description || "Encuentra y ofrece servicios locales en EnMiPueblo.";

const defaultOgImage = SITE ? `${SITE}/og-default.png` : "/og-default.png";
const ogImageUrl = ogImage || defaultOgImage;

// Ads globals
const ADSENSE_CLIENT = import.meta.env.PUBLIC_ADSENSE_CLIENT || "";
const adsenseGlobalScript = `var ADSENSE_CLIENT=${JSON.stringify(
  ADSENSE_CLIENT || ""
)};window.ADSENSE_CLIENT=ADSENSE_CLIENT;`;

// Preconnect
const BACKEND_URL = import.meta.env.PUBLIC_BACKEND_URL || "";
const backendOrigin = (() => {
  try {
    return BACKEND_URL ? new URL(BACKEND_URL).origin : "";
  } catch {
    return "";
  }
})();

// üé® Tema ‚ÄúVerde + Teal + Azul + Lila suave‚Äù (como la imagen)
const BG_STYLE = `
  background:
    radial-gradient(950px circle at 18% 18%, rgba(126, 224, 176, 0.40) 0%, rgba(0,0,0,0) 62%),
    radial-gradient(900px circle at 82% 22%, rgba(90, 208, 230, 0.38) 0%, rgba(0,0,0,0) 60%),
    radial-gradient(1100px circle at 20% 95%, rgba(30, 64, 175, 0.10) 0%, rgba(0,0,0,0) 70%),
    linear-gradient(135deg, #CFEFFF 0%, #D9FFF2 38%, #B9F7D7 62%, #F3E8FF 100%);
`;

// Variables reutilizables (mantengo nombres sb para no romper estilos ya tocados)
const THEME_VARS = `
:root{
  --sb-bg-sky:#CFEFFF;         /* azul claro */
  --sb-bg-mint:#D9FFF2;        /* menta muy suave */
  --sb-bg-green:#B9F7D7;       /* verde suave */
  --sb-bg-lilac:#F3E8FF;       /* lila suave */

  --sb-ink:#0B2A3D;            /* azul petr√≥leo para t√≠tulos (alto contraste) */
  --sb-ink2:#114B5F;           /* teal oscuro para texto */

  --sb-accent:#13A7A8;      
  --sb-accent2:#22C55E;

  --sb-blue:#1E40AF;
  --sb-border:rgba(17,75,95,0.18);
}
`;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="referrer" content="strict-origin-when-cross-origin" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />

    <style is:inline set:html={THEME_VARS}></style>

    {backendOrigin ? (
      <>
        <link rel="preconnect" href={backendOrigin} crossorigin="anonymous" />
        <link rel="dns-prefetch" href={backendOrigin} />
      </>
    ) : null}

    <link rel="preconnect" href="https://accounts.google.com" crossorigin="anonymous" />
    <link rel="dns-prefetch" href="https://accounts.google.com" />

    <link rel="preconnect" href="https://www.googleapis.com" crossorigin="anonymous" />
    <link rel="dns-prefetch" href="https://www.googleapis.com" />

    <script src="https://accounts.google.com/gsi/client" async defer></script>

    <title>{title}</title>
    <ViewTransitions />

    <link rel="canonical" href={canonicalUrl} />

    {noindex ? (
      <meta name="robots" content="noindex,nofollow" />
    ) : (
      <meta name="robots" content="index,follow" />
    )}

    <meta name="description" content={metaDescription} />

    <meta property="og:title" content={title} />
    <meta property="og:description" content={metaDescription} />
    <meta property="og:type" content={ogType} />
    <meta property="og:url" content={canonicalUrl} />
    <meta property="og:image" content={ogImageUrl} />

    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={metaDescription} />
    <meta name="twitter:image" content={ogImageUrl} />

    {ADSENSE_CLIENT ? (
      <>
        <script is:inline set:html={adsenseGlobalScript}></script>
        <script
          async
          src={`https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js?client=${ADSENSE_CLIENT}`}
          crossorigin="anonymous"
        ></script>
      </>
    ) : null}
  </head>

  <body style={BG_STYLE}>
    <Header />
    <main class="min-h-[60vh]">
      <slot />
    </main>
    <Footer />
    <CookieConsentIsland client:only="react" />
  </body>
</html>
