---
// src/layouts/Layout.astro
import Header from '../components/Header.astro';
import Footer from '../components/footer.astro';
import { ViewTransitions } from 'astro:transitions';

// IMPORTA el CSS para que Astro lo empaquete
import "../styles/global.css";

interface Props { title: string; }
const { title } = Astro.props;

// ENV
const ADSENSE_CLIENT = import.meta.env.PUBLIC_ADSENSE_CLIENT;
const GOOGLE_TAG_ID = import.meta.env.PUBLIC_GOOGLE_TAG_ID;
---

<!doctype html>
<html lang="es" view-transition class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Encuentra y ofrece servicios locales en EnMiPueblo." />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="referrer" content="strict-origin-when-cross-origin" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <ViewTransitions />

    <!-- Consent Mode (opcional). Si NO pones PUBLIC_GOOGLE_TAG_ID, no se carga gtag.js -->
    <script is:inline>
      window.dataLayer = window.dataLayer || [];
      function gtag(){ dataLayer.push(arguments); }

      // Por defecto: denegado (si usas Consent Mode). El CMP de Google actualizará el estado.
      gtag('consent','default', {
        ad_storage: 'denied',
        ad_user_data: 'denied',
        ad_personalization: 'denied',
        analytics_storage: 'denied'
      });

      // Botón "Configurar cookies" (abre el CMP de Google / Funding Choices)
      window.openCookieSettings = () => {
        const tryOpen = () => {
          if (window.googlefc && typeof window.googlefc.showRevocationMessage === 'function') {
            window.googlefc.showRevocationMessage();
          }
        };

        try {
          tryOpen();
          return;
        } catch {}

        // Si googlefc aún no está listo, lo encolamos.
        window.googlefc = window.googlefc || {};
        window.googlefc.callbackQueue = window.googlefc.callbackQueue || [];
        window.googlefc.callbackQueue.push(() => {
          try { tryOpen(); } catch {}
        });
      };
    </script>

    {GOOGLE_TAG_ID ? (
      <>
        <script async src={`https://www.googletagmanager.com/gtag/js?id=${GOOGLE_TAG_ID}`}></script>
        <script is:inline define:vars={{ GOOGLE_TAG_ID }}>
          gtag('js', new Date());
          gtag('config', GOOGLE_TAG_ID, { anonymize_ip: true });
        </script>
      </>
    ) : null}

    <!-- AdSense (esto es lo ÚNICO que necesitas para que Google CMP se sirva automáticamente) -->
    {ADSENSE_CLIENT ? (
      <script
        async
        src={`https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js?client=${ADSENSE_CLIENT}`}
        crossorigin="anonymous"
      />
    ) : null}
  </head>

  <body class="min-h-screen flex flex-col bg-gradient-to-br from-emerald-50 via-white to-emerald-100 text-gray-900">
    <Header />
    <main class="flex-grow">
      <slot />
    </main>
    <Footer />
  </body>
</html>
