---
// src/layouts/Layout.astro
import Header from "../components/Header.astro";
import Footer from "../components/footer.astro";
import CookieConsentIsland from "../components/CookieConsentIsland.tsx";
import { ViewTransitions } from "astro:transitions";

import "../styles/global.css";

interface Props {
  title: string;
  description?: string;
  canonical?: string;
  ogImage?: string;
  ogType?: string;
  noindex?: boolean;
}

const {
  title,
  description,
  canonical,
  ogImage,
  ogType = "website",
  noindex = false,
} = Astro.props;

const SITE = Astro.site ? String(Astro.site).replace(/\/$/, "") : "";
const canonicalUrl = canonical
  ? canonical
  : SITE
  ? `${SITE}${Astro.url.pathname}`
  : Astro.url.toString();

const metaDescription =
  description || "Encuentra y ofrece servicios locales en EnMiPueblo.";

const defaultOgImage = SITE ? `${SITE}/og-default.png` : "/og-default.png";
const ogImageUrl = ogImage || defaultOgImage;

// --- Ads / globals ---
const ADSENSE_CLIENT = import.meta.env.PUBLIC_ADSENSE_CLIENT || "";
const adsenseGlobalScript = `var ADSENSE_CLIENT=${JSON.stringify(
  ADSENSE_CLIENT || ""
)};window.ADSENSE_CLIENT=ADSENSE_CLIENT;`;

// Preconnect
const BACKEND_URL = import.meta.env.PUBLIC_BACKEND_URL || "";
const backendOrigin = (() => {
  try {
    return BACKEND_URL ? new URL(BACKEND_URL).origin : "";
  } catch {
    return "";
  }
})();

const FIREBASE_AUTH_DOMAIN = import.meta.env.PUBLIC_FIREBASE_AUTH_DOMAIN || "";
const firebaseAuthOrigin = FIREBASE_AUTH_DOMAIN
  ? `https://${FIREBASE_AUTH_DOMAIN}`
  : "";
---

<!doctype html>
<html lang="es" view-transition class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={metaDescription} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="referrer" content="strict-origin-when-cross-origin" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />

    {backendOrigin ? (
      <>
        <link rel="preconnect" href={backendOrigin} crossorigin="anonymous" />
        <link rel="dns-prefetch" href={backendOrigin} />
      </>
    ) : null}

    {firebaseAuthOrigin ? (
      <>
        <link rel="preconnect" href={firebaseAuthOrigin} crossorigin="anonymous" />
        <link rel="dns-prefetch" href={firebaseAuthOrigin} />
      </>
    ) : null}

    <link rel="preconnect" href="https://firebasestorage.googleapis.com" crossorigin="anonymous" />
    <link rel="dns-prefetch" href="https://firebasestorage.googleapis.com" />

    <link rel="preconnect" href="https://www.googleapis.com" crossorigin="anonymous" />
    <link rel="dns-prefetch" href="https://www.googleapis.com" />

    <title>{title}</title>
    <ViewTransitions />

    <link rel="canonical" href={canonicalUrl} />

    {noindex ? (
      <meta name="robots" content="noindex, nofollow" />
    ) : (
      <meta name="robots" content="index, follow" />
    )}

    <meta property="og:locale" content="es_ES" />
    <meta property="og:site_name" content="EnMiPueblo" />
    <meta property="og:type" content={ogType} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={metaDescription} />
    <meta property="og:url" content={canonicalUrl} />
    <meta property="og:image" content={ogImageUrl} />

    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={metaDescription} />
    <meta name="twitter:image" content={ogImageUrl} />

    <!-- ✅ ADSENSE_CLIENT global -->
    <script is:inline set:html={adsenseGlobalScript}></script>

    <!-- ✅ AdSense: NO cargar script hasta consentimiento -->
    {ADSENSE_CLIENT ? (
      <script is:inline>
        {`(function () {
          try {
            var LS_KEY = "cmp.consent.v1";
            var client = window.ADSENSE_CLIENT || ${JSON.stringify(ADSENSE_CLIENT)};
            window.adsbygoogle = window.adsbygoogle || [];
            // por defecto, pausamos
            window.adsbygoogle.pauseAdRequests = 1;

            window.__enmiLoadAdsense = function () {
              try {
                if (!client) return;
                if (window.__enmiAdsenseLoaded) return;
                window.__enmiAdsenseLoaded = true;

                var already = document.querySelector('script[src*="pagead/js/adsbygoogle.js"]');
                if (already) return;

                var s = document.createElement("script");
                s.async = true;
                s.src = "https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js?client=" + encodeURIComponent(client);
                s.crossOrigin = "anonymous";
                document.head.appendChild(s);
              } catch (e) {}
            };

            // Si ya aceptó Ads en el pasado, cargamos script ahora
            try {
              var raw = localStorage.getItem(LS_KEY);
              if (!raw) return;
              var st = JSON.parse(raw);
              if (st && st.ads === true) {
                window.__enmiLoadAdsense();
                window.adsbygoogle.pauseAdRequests = 0;
              }
            } catch (e) {}
          } catch (e) {}
        })();`}
      </script>
    ) : null}

    <!-- (opcional) si existe googlefc, intenta abrir su panel -->
    <script is:inline>
      window.openCookieSettings = () => {
        const open = () => {
          if (window.googlefc && typeof window.googlefc.showRevocationMessage === "function") {
            window.googlefc.showRevocationMessage();
          }
        };
        try { open(); return; } catch {}
        window.googlefc = window.googlefc || {};
        window.googlefc.callbackQueue = window.googlefc.callbackQueue || [];
        window.googlefc.callbackQueue.push(() => {
          try { open(); } catch {}
        });
      };
    </script>
  </head>

  <body class="min-h-screen flex flex-col bg-gradient-to-br from-emerald-50 via-white to-emerald-100 text-gray-900">
    <Header />
    <main class="flex-grow">
      <slot />
    </main>

    <CookieConsentIsland client:load />

    <Footer />
  </body>
</html>
