rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {

    // -----------------------------
    // Lectura pública para medios
    // (las URLs de Storage se usan en anuncios públicos)
    // -----------------------------
    match /service_images/{allPaths=**} {
      allow read: if true;
    }

    // -----------------------------
    // Escritura SOLO autenticados y
    // SOLO dentro de su carpeta UID.
    // Estructura recomendada:
    // service_images/<subcarpeta>/<uid>/<archivo>
    // Ej: service_images/fotos/<uid>/169...
    // -----------------------------
    match /service_images/{subfolder}/{userId}/{allPaths=**} {
      allow write: if request.auth != null
        && request.auth.uid == userId
        && request.resource.size < 60 * 1024 * 1024
        && (
          request.resource.contentType.matches('image/.*') ||
          request.resource.contentType.matches('video/.*')
        );
    }

    // Denegar todo lo demás por defecto
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
